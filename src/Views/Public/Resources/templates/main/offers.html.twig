{% if offers %}
    <!-- product area start -->
    <section class="product-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="product-container">
                        <!-- product tab content start -->
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="tab1">
                                <div class="product-carousel-4 slick-row-10 slick-arrow-style">

                                    {% for offer in offers %}
                                        <!-- product item start -->
                                        <div class="product-item">
                                            <figure class="product-thumb">
                                                <a href="{{ path('offer_view', {'slug':offer.slug, 'id':offer.id }) }}">
                                                    {% if offer.images|length >0 %}
                                                        {% set image = offer.images.first() %}
                                                        <img class="pri-img" src="/uploads/offers/{{ image.filename }}"
                                                            alt="{{ offer.title }}">
                                                        <img class="sec-img" src="/uploads/offers/{{ image.filename }}"
                                                            alt="{{ offer.title }}">
                                                    {% else %}
                                                        <img class="pri-img" src="/assets/images/product/product-1.jpg">
                                                        <img class="sec-img" src="/assets/images/product/product-18.jpg">
                                                    {% endif %}
                                                </a>
                                            </figure>
                                            <div class="product-caption text-center">
                                                <h6 class="product-name">
                                                    <a href="{{ path('offer_view', {'slug':offer.slug, 'id':offer.id }) }}">{{ offer.title }}</a>
                                                </h6>
                                                <div class="price-box">
                                                    <span class="price-regular">{{ offer.price }} â‚½</span>
                                                    <br>
                                                    <span class="price-old">{{ offer.createdAt|date("d M G:i")}}</span>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- product item end -->
                                    {% endfor %}

                                </div>
                            </div>
                        </div>
                        <!-- product tab content end -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- product area end -->
{% endif %}